{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*.ts",
    "rollup.config.mjs"
  ],
  "exclude": [
    "dist"
  ]
}
